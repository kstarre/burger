<div class="col-md-4">
	<ul>
		{{#each burgers}}
			{{#unless devour}}
				<li>
					{{id burger_name}}

					<form action="/{{id}}?_method=PUT" method="POST">
					  <input type="hidden" name="devour" value="true">
					  <button type="submit">Devour?</button>
					</form>
				</li>
			{{/unless}}
		{{/each}}
	</ul>
</div>
<div class="col-md-4 col-md-offset-4 devoured">
	<ul>
		{{#each burgers}}
			{{#if devour}}
	    		<li>
	    			{{id burger_name}}
	    		</li>
	    	{{/if}}
		{{/each}}
	</ul>
</div>